---
import Layout from "../layouts/Layout.astro";
import githubMark from "../assets/github-mark.png";
import Home from "../components/Home";
---

<Layout>
  <div class="min-h-screen flex flex-col">
    <header
      class="text-white py-4"
    >
      <div class="container mx-auto px-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">How many ciggs?</h1>
        <a
          href="https://github.com/k88manish/poker-planning"
          target="_blank"
          rel="noopener noreferrer"
          class="fixed top-4 right-4 z-50 transition-opacity duration-300 hover:opacity-70"
          aria-label="View source on GitHub"
        >
          <img src={githubMark.src} alt="GitHub" class="w-8 h-8" />
        </a>
      </div>
    </header>
    <main class="flex-grow">
      <div class="container mx-auto px-4 max-w-7xl">
          <Home client:load />
      </div>
    </main>
  </div>
</Layout>

